{
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["major", "minor"],
      "matchPackageNames": ["ruby"],
      "enabled": false
    },
    {
      "matchFiles": ["^bin/generate_dockerfiles$", "^images/.*"],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^bin/generate_dockerfiles$"],
      "matchStrings": ["image: '(?<depName>.*?):(?<currentValue>.*)'"],
      "datasourceTemplate": "docker"
    }
  ],
  "recreateClosed": true,
  "postUpgradeTasks": {
    "commands": ["bin/generate_dockerfiles"]
  }
}
