{
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    },
    {
      "matchFiles": ["^\\.github/workflows/build\\.yaml$"],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github/workflows/build\\.yaml$"],
      "matchStrings": ["image: (?<depName>.*?):(?<currentValue>.*)\\s"],
      "datasourceTemplate": "docker"
    }
  ],
  "recreateClosed": true
}
