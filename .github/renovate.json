{
  "allowedPostUpgradeCommands": [
    "bin/generate_files"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "matchPackageNames": [
        "ruby"
      ],
      "enabled": false
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^bin/generate_files$"
      ],
      "matchStrings": [
        "image: '(?<depName>.*?):(?<currentValue>.*)'"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "recreateClosed": true
}
