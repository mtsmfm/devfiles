{
  "allowedPostUpgradeCommands": [
    "bin/generate_files"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "matchPackageNames": [
        "ruby"
      ],
      "enabled": false
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^bin/generate_files$"
      ],
      "matchStrings": [
        "image: '(?<depName>.*?):(?<currentValue>.*)'"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "recreateClosed": true,
  "postUpgradeTasks": {
    "commands": [
      "bin/generate_files"
    ],
    "fileFilters": [
      "bin/generate_files",
      "images/**/Dockerfile"
    ]
  }
}
